<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcdev.passbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeLogin"
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SetLoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeFocus"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name=".ui.PasswordDetailActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name=".ui.AddPasswordActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name=".ui.UpdatePasswordActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
    </application>

</manifest>
