<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mcdev.passbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mcdev.passbox.ui.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mcdev.passbox.ui.SetLoginActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeFocus"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="com.mcdev.passbox.ui.MainActivity"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="com.mcdev.passbox.ui.PasswordDetailActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="com.mcdev.passbox.ui.AddPasswordActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
        <activity
            android:name="com.mcdev.passbox.ui.UpdatePasswordActivity"
            android:theme="@style/AppThemeDetail"
            android:excludeFromRecents="true" >
        </activity>
    </application>

</manifest>
