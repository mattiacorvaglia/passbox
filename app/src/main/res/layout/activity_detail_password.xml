		</LinearLayout>
    
    </ScrollView>

    <com.mcdev.passbox.views.FloatingActionButton
        android:id="@+id/toggle_pwd_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fab_icon="@drawable/ic_visibility_white_24dp"
        app:fab_colorNormal="@color/pink_200"
        app:fab_colorPressed="@color/pink_400"
        android:elevation="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/toolbar_extended"
        android:layout_marginBottom="-36dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
    
</RelativeLayout>
